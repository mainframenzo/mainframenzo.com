<div id='<%= slideshowId %>' class='threed-slideshow' autofocus='autofocus'>
  <div class='threed-slideshow-state'>
    <p class='hide-when-javascript-disabled center-text'><span class='threed-slideshow-prev'>&lt;</span> Model <span id='<%= slideshowId %>-current-slide'>0</span> of <%= slides.length %> <span class='threed-slideshow-next'>&gt;</span></p> 
  </div>
  <div id='<%= slideshowId %>-data' class='threed-content-data'><%- JSON.stringify(slides) %></div>
  <model-viewer id='<%= slideshowId %>-model-viewer' class='threed-content' loading='eager' camera-controls auto-rotate touch-action='pan-y' src='<%= slides[0].filePath %>'></model-viewer>
  <p id='<%= slideshowId %>-description' class='threed-content center-text'><a href='<%- slides[0].filePath %>' target='_blank'><%- slides[0].filePath %></a><br/><%- slides[0].description %></p>
  <% 
    slides.forEach(function(slide) {
  %>
  <figure>
    <div class='image-container'>
      <image loading='lazy' class='one_photo' src='<%= slide.thumbnailPath %>'/>
      <!-- If you have JavaScript disabled, you are probably comfortable with file paths. -->
      <figcaption><a href='<%- slide.filePath %>' target='_blank'><%- slide.filePath %></a><br/><%- slide.description %></figcaption>
    </div>
  </figure>
  <%
    });
  %>
</div> 